<%= turbo_frame_tag dom_id(friendship), class: "col-12 col-sm-6 col-lg-4 mb-2" do %>
  <div class="d-flex flex-column m-1 gap-1 h-100 bg-white rounded shadow">
    <div class="banner_container rounded d-flex flex-column justify-content-center align-items-center">
      <div class="position-absolute">
        <%= link_to user_path(friendship.friend), data: {turbo_frame: "_top"} do %>
          <%= image_tag user_avatar(friendship.friend), id: 'm-avatar' %>
        <% end %>
      </div>
      <%= user_banner(friendship.friend) %>      
    </div>
    <div class="d-flex text-break px-3 align-items-center gap-3">
      <div class="d-flex flex-column">
        <b> <%= link_to "#{friendship.friend.full_name}", user_path(friendship.friend), data: { turbo: false } %> </b>
        <span> Friended <%= time_ago_in_words(friendship.created_at) %> ago </span>
      </div>
      <div class="ms-auto text-nowrap">
        <%= unfriend_button(friendship, :friend) if current_user == @user %>
      </div>
    </div>
  </div>
<% end %>
