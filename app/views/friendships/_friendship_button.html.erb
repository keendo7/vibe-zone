<% unless friendship %>
  <% if current_user.received_friends.include?(user) %>
    <%= button_to 'Received friend request!', notifications_path, method: :get, data: { turbo: false } %>
  <% else %>
    <%= button_to "Send friend request", user_friendships_path(user.id), method: :post, data: { turbo: false } %>
  <% end %>
<% else %>
  <%= button_to "Remove from friends", friendship_path(friendship), method: :delete, data: { turbo: false } %>
<% end %>
