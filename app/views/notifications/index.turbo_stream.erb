<%= turbo_stream.append :notifications do %>
  <%= render @notifications %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace :pagination do %>
    <%= turbo_frame_tag :pagination, 
          src: notifications_path(page: @pagy.next, format: :turbo_stream), 
          loading: :lazy  
    %>
  <% end %>
<% end %>