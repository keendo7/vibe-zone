<%= turbo_frame_tag dom_id(comment, :like_count) do %>
  <%= pluralize(comment.likeable_count, "like") %>
  <% if comment.likes.exists?(user_id: current_user.id) %>
    <%= button_to "Unlike", unlike_comment_path(comment), method: :delete, data: {turbo_stream: true} %>
  <% else %>
    <%= button_to "Like", like_comment_path(comment), method: :post, data: {turbo_stream: true} %>
  <% end %>
<% end %>
