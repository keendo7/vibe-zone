<%= turbo_frame_tag dom_id(post, :likes) do %>
  <div class="d-flex flex-row align-items-center">
    <div class="post_likes_count">
      <%= post.likeable_count %>
    </div>
    <div class="post_like_button">
      <% if post.likes.exists?(user_id: current_user.id) %>
        <%= button_to unlike_post_path(post), class: "round-btn blank", method: :delete do %>
          <i class="fa-solid fa-heart fa-xl text-danger"></i>
        <% end %>
      <% else %>
        <%= button_to like_post_path(post), class: "round-btn blank", method: :post do %>
          <i class="fa-regular fa-heart fa-xl text-danger"></i>
        <% end %>
      <% end %>
    </div>
    <div class="post_comments_count">
      <%= post.commentable_count %>
    </div>
    <div class="post_comments_button">
      <%= link_to post_path(post), class: "round-btn blank", data: { turbo: "false" } do %>
        <i class="fa-regular fa-comment fa-xl"></i>
      <% end %>
    </div>
  </div>
<% end %>
