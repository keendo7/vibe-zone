<%= turbo_frame_tag dom_id(post, :likes) do %>
  <p><%= pluralize(post.likeable_count, 'like') %></p> 
  <% if post.likes.exists?(user_id: current_user.id) %>
    <%= button_to "Unlike", unlike_post_path(post), method: :delete %>
  <% else %>
    <%= button_to "Like", like_post_path(post), method: :post %>
  <% end %>
<% end %>
