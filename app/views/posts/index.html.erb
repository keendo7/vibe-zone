<div class="container py-3 gap-3 align-items-center">  
  <div class="bg-white rounded shadow w-sm-75 w-100 p-2"> 
    <%= render "posts/form", post: current_user.authored_posts.new, turbo_action: "false" %>
  </div>

  <% if @posts.any? %>
    <div class="d-flex align-items-center justify-content-between w-100 gap-2 mt-4">
      <%= form_with(url: posts_path, method: :get, data: {turbo_frame: "posts", turbo_action: "advance", controller: "search", action: "input->search#submit"}) do |form| %>
        <div class="input-group">
          <span class="input-group-text">
            <i class="fa-solid fa-magnifying-glass"></i>
          </span>
          <%= form.text_field :query, placeholder: "Search post...", class: "form-control" %>
        </div>
      <% end %>
      <div data-controller="sort">
        <form method="get" action="<%= posts_path %>" data-turbo-frame="posts" data-turbo-stream>
          <select name="sort_by" class="form-select" data-action="sort#update" data-sort-target="select">
            <option value="newest" <%= 'selected' if params[:sort_by] == 'newest' %>>Newest</option>
            <option value="oldest" <%= 'selected' if params[:sort_by] == 'oldest' %>>Oldest</option>
            <option value="most_liked" <%= 'selected' if params[:sort_by] == 'most_liked' %>>Most liked</option>
            <option value="most_popular" <%= 'selected' if params[:sort_by] == 'most_popular' %>>Most popular</option>
          </select>
        </form>
      </div>
    </div>
  <% end %>

  <%= turbo_frame_tag :posts, class: "d-flex flex-column align-items-center w-100" do %>
    <%= render @posts %>
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <% end %>
</div>
