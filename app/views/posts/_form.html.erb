<div class="new-post-form">
  <% if flash[:alert]%>
    <span class='alert'><%= flash[:alert] %></span>
  <% end %>

  <div class="d-flex flex-column mb-4">
    <%= form_with(model: @post, data: { turbo: false }) do |form| %>
      <%= invisible_captcha %>
      <div class="d-flex flex-row justify-content-center">
        <%= form.text_area :content, size: "25x5", placeholder: "Whats on your mind today?" %>
      </div>
      <div class="d-flex flex-column align-items-center">
        <%= form.file_field :image, class: "form-control w-75 mx-auto" %>
        <%= form.submit class: "btn btn-primary round-btn mt-2" %>
      </div>
    <% end %>
  </div>
</div>
