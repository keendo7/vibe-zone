<div class="min-vh-100 d-flex flex-column justify-content-md-center bg-svg"> 
  <div class="row w-100 justify-content-md-center align-items-md-center">
    <div class="col col-lg-6">
      <h2>Vibezone</h2>
      <p>Come hang out and <b>vibe</b> with your friends!</p>
    </div>

    <div class="col col-lg-3 d-flex flex-column align-items-md-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= invisible_captcha %>
        <div class="field">
          <br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
        </div>

        <div class="field">
          <br />
          <%= f.text_field :first_name, autofocus: true, placeholder: "First name", class: "form-control" %>
        </div>

        <div class="field">
          <br />
          <%= f.text_field :last_name, autofocus: true, placeholder: "Last name", class:"form-control" %>
        </div>

        <div class="field">
          <br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class:"form-control" %>
        </div>

        <div class="field">
          <br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class:"form-control" %>
        </div>

        <div class="actions">
          <br />
          <%= f.submit "Sign up", class: "btn btn-primary w-100", data: { turbo: false }  %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
