<div class="col-12 col-sm-6 col-lg-4 mb-2">
  <div class="d-flex flex-column m-1 gap-1 h-100 bg-white rounded shadow">
    <div class="banner_container rounded d-flex flex-column justify-content-center align-items-center">
      <div class="position-absolute">
        <%= link_to user_path(user), data: { turbo: false } do %>
          <%= image_tag user_avatar(user, 150), id: "m-avatar", loading: "lazy" %>
        <% end %>
      </div>
      <%= user_banner(user) %>      
    </div>
    <div class="d-flex flex-column text-break px-3">
      <b> <%= link_to "#{user.full_name}", user_path(user), data: { turbo: false } %> </b>
      <span> Joined <%= time_ago_in_words(user.created_at) %> ago </span>
    </div>
  </div>
</div>
