<div class="d-flex flex-column align-items-center flex-grow-1 p-3">  
  <% if @users.any? %>
    <h2 class="text-center"> Search results </h2>
    <div id="users" class="row g-3 w-100 mb-3">
      <%= render @users %>
    </div>
    <%= render "pager", pagy: @pagy %>
  <% else %>
    <%= render partial: "shared/empty_state", locals: { elements: "users" } %>
  <% end %>
</div>
