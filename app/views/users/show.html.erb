<h1> Name: <%= @user.full_name %> </h1>
<h2> Member since: <%= @user.created_at.to_date %> </h2>
<% if current_user == @user %>
  <%= button_to "Delete account", user_path, confirm: "Are you sure?", method: :delete %>
<% end %>
<%= pluralize(@user.active_friends.count, 'friend') %>
<% if current_user != @user %>
  <% if !current_user.friends.include?(@user) %>
    <%= button_to "Send friend request", "#" %>
  <% else %>
    <%= button_to "Remove from friends", "#" %>
  <% end %>
<% end %>

<h3> My Posts </h3>
<%= render 'posts/posts' %>

